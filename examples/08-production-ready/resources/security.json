{
  "input_validation": {
    "max_file_size": 104857600,
    "allowed_file_types": [
      ".docx",
      ".xlsx",
      ".pdf",
      ".txt",
      ".md"
    ],
    "blocked_paths": [
      "../",
      "..\\",
      "/etc/",
      "C:\\Windows\\"
    ]
  },
  "authentication": {
    "required": true,
    "methods": [
      "api_key",
      "bearer_token"
    ],
    "token_expiry": 3600
  },
  "rate_limiting": {
    "enabled": true,
    "max_requests_per_minute": 60,
    "max_requests_per_hour": 1000
  },
  "encryption": {
    "sensitive_fields": [
      "api_key",
      "password",
      "token"
    ],
    "algorithm": "AES-256"
  },
  "audit": {
    "enabled": true,
    "log_all_operations": true,
    "retention_days": 90
  }
}


